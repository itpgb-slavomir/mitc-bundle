{% block workspace %}
<div class="ui-layout-center">
	{% set finder=model.finder %}

	{% for iterator in finder %}

		{% if iterator.isDir() %}

			{% include "SSMAPIBundle::Filesystem/directory.html.twig" with { 
				'iterator': iterator,
				'path': model.path
			} %}

		{% endif %}

	{% endfor %}

	{% for iterator in finder %}

		{% if iterator.isFile() %}

			{% include "SSMAPIBundle::Filesystem/file.html.twig" with {
				'iterator': iterator,
				'path': model.path
			} %}

		{% endif %}

	{% endfor %}

</div>
{% endblock %}